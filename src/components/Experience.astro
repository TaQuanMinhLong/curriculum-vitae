---
import type { ExperienceTypes } from "~/types";

interface Props {
  experience: ExperienceTypes;
}

const { experience } = Astro.props;
---

<div class="flex flex-col lg:flex-row gap-4">
  <span
    class="uppercase font-medium text-sm lg:min-w-[160px] lg:font-semibold lg:text-md"
    >{`${experience.startDate} - ${experience.endDate}`}</span
  >
  <div class="tracking-wide text-justify">
    <div class="mb-1">
      <h4 class="font-semibold uppercase">{experience.name}</h4>
      <h5 class="font-semibold text-sm">{experience.location}</h5>
    </div>
    <ul>
      {experience.description.map(($) => <li>{$}</li>)}
    </ul>
  </div>
</div>
