---
import type { ExperienceTypes } from "~/types";

interface Props {
  experience: ExperienceTypes;
}

const { experience } = Astro.props;
---

<div class="grid grid-cols-1-3 gap-6">
  <span class="uppercase font-medium"
    >{`${experience.startDate} - ${experience.endDate}`}</span
  >
  <div class="tracking-wide">
    <h4 class="font-semibold uppercase">{experience.name}</h4>
    <h5 class="font-semibold">{experience.location}</h5>
    <ul>
      {experience.description.map(($) => <li>{$}</li>)}
    </ul>
  </div>
</div>
