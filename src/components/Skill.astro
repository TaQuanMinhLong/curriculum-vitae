---
import type { SkillTypes } from "~/types";

interface Props {
  skill: SkillTypes;
}

const { skill } = Astro.props;
---

<div class="flex">
  <span class="min-w-[180px]">{skill.label}</span>
  <span class="flex min-h-full flex-grow items-center">
    <span class="bg-primary-medium h-1/3" style={{ width: `${skill.value}%` }}
    ></span>
    <span class="h-1/3 flex-grow bg-gray-200"></span>
  </span>
</div>
