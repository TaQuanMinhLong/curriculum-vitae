---
import type { SkillTypes } from "~/types";

interface Props {
  skill: SkillTypes;
}

const { skill } = Astro.props;
---

<div class="min-h-[24px] flex flex-col lg:flex-row lg:gap-4">
  <span class="h-6 lg:min-w-[160px]">{skill.label}</span>
  <span class="flex h-6 items-center flex-grow">
    <span class="bg-primary-medium h-1/3" style={{ width: `${skill.value}%` }}
    ></span>
    <span class="h-1/3 flex-grow bg-gray-200"></span>
  </span>
</div>
