---
interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<section
  id={title}
  class:list={[
    "flex flex-col",
    { "gap-3": !className?.includes("gao-") },
    className,
  ]}
>
  <h3
    class="text-lg md:text-xl lg:text-2xl font-semibold uppercase tracking-wider"
  >
    {title}
  </h3>
  <div class="h-[3px] w-full rounded bg-dark mb-2"></div>
  <slot />
</section>
