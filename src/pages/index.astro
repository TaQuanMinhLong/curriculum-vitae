---
import Layout from "../layouts/Layout.astro";
import { info } from "~/content/info";
---

<style>
  #profile-avatar {
    background: url(assets/img/profile.jpg) no-repeat 10% 50%;
    background-size: 150%;
    width: 100%;
    aspect-ratio: 760/912;
  }
</style>

<Layout title={`${info.name} - CV`}>
  <main
    class="relative m-12 grid w-full max-w-[1000px] grid-cols-1-2 overflow-hidden rounded-sm bg-white shadow-paper"
  >
    <aside
      class="relative flex min-w-[300px] flex-col gap-11 bg-primary-dark text-white pb-16"
    >
      <div id="profile-avatar"></div>
      <section id="education" class="ml-10">
        <h3
          class="border-b-[3px] border-b-primary-light pb-4 text-xl font-semibold uppercase tracking-wider"
        >
          Education
        </h3>
        {
          info.education.map(($) => (
            <div class="ml-5 mt-6 flex flex-col gap-1 leading-[1em]">
              <h4 class="font-medium uppercase">{$.location}</h4>
              <h5 class="text-sm font-light">{$.name}</h5>
              <h6 class="text-xs font-light">{`${$.startDate} - ${$.endDate}`}</h6>
            </div>
          ))
        }
      </section>
      <section id="contact" class="flex flex-col gap-3">
        {
          info.contact.map(($) => (
            <div class="flex flex-col">
              <div class="flex">
                <span class="min-w-[58px] bg-primary-medium" />
                <h4 class="text-md flex-grow bg-dark px-4 py-1 font-medium tracking-wider">
                  {$.label}
                </h4>
              </div>
              {
                <h5 class="ml-[74px] text-xs">
                  {$.href ? (
                    <a href={$.href} target="_blank">
                      {$.content}
                    </a>
                  ) : (
                    $.content
                  )}
                </h5>
              }
            </div>
          ))
        }
      </section>
    </aside>
    <div class="relative bg-white">
      <header
        class="mt-20 flex aspect-[4/1] w-full items-center justify-center bg-primary text-white"
      >
        <div class="flex w-[80%] flex-col justify-start gap-3">
          <h2
            class="text-2xl font-bold uppercase leading-[1em] md:text-3xl lg:text-4xl xl:text-[44px]"
          >
            {info.name}
          </h2>
          <p class="pr-2 font-light uppercase">
            {info.jobDescription}
          </p>
        </div>
      </header>
      <article>
        <section></section>
        <section
          id="education"
          class="relative flex flex-col items-center border-b border-b-slate-300 pb-5 pt-1"
        >
          <h3 class="mb-3 font-semibold uppercase tracking-wide">Education</h3>
          <ul>
            {info.education.map(($) => <li>{$.startDate}</li>)}
          </ul>
        </section>
      </article>
    </div>
  </main>
</Layout>
